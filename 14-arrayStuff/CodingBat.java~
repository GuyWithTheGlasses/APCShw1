public class CodingBat{

    /*------------- HW 14b Problems --------------*/
    
    public int sum67(int[] nums) {
	int sum = 0;
	
	for(int i = 0 ; i < nums.length ; i++){
	    
	    if(nums[i] == 6){
		
		while(i < nums.length){
		    
		    if(nums[i] == 7){
			i++;
			break;
		    }

		}

	    }

	    if(i < nums.length){
		sum = sum + nums[i];
	    }
	}
    
	return sum;
    }

    
